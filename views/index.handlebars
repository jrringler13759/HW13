  <div class="row">

    <div class="col-sm-6">
      <div class = "card">
        <h2>U CaN haZ!</h2>
          <ul>
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
              {{/unless}}
            {{/each}}
          </ul>
      </div>
    </div>

    <div class="col-sm-6">
      <div class = "card">
        <h2>U eaTz!</h2>
          <ul>
            {{#each burgers}}
              {{#if devoured}}
